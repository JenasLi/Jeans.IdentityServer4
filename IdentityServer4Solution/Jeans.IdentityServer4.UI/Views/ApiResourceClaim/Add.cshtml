@model Jeans.IdentityServer4.UI.Core.Entity.ApiResourceClaim

@{
    ViewData["Title"] = "Add";
}

<section class="content-header">
    <h1>
        ApiResourceClaim
        <small>@ViewData["Title"]</small>
    </h1>
</section>
<section class="content container-fluid">
    <div class="box box-primary">

        <form asp-action="Add" class="form-horizontal" method="post">
            <div class="box-body">
                <div asp-validation-summary="ModelOnly" class="help-block"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Type"></label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Type">
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="ApiResourceId">ApiResource.Name</label>
                    <div class="col-sm-8">
                        <select class="form-control" asp-for="ApiResourceId" asp-items="@ViewBag.ApiResourceSelectItemList"></select>
                        <span asp-validation-for="ApiResourceId" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="box-footer text-center">
                <a asp-controller="ApiResourceClaim" asp-action="List" class="btn btn-default pull-left">
                    <i class="fa fa-arrow-left"></i>
                    返回列表
                </a>
                <button type="reset" class="btn btn-default">重置</button>
                <button type="submit" class="btn btn-primary">提交</button>
            </div>
        </form>

    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
