                <div class="form-group">
                    <label asp-for="RefreshTokenUsage" class="col-sm-3 control-label"></label><div class="col-sm-8">
                        <input asp-for="RefreshTokenUsage" class="form-control" />
                        <span asp-validation-for="RefreshTokenUsage" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <div class="checkbox">
                            <label>
                                <input asp-for="UpdateAccessTokenClaimsOnRefresh" /> @Html.DisplayNameFor(model => model.UpdateAccessTokenClaimsOnRefresh)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="RefreshTokenExpiration" class="col-sm-3 control-label"></label><div class="col-sm-8">
                        <input asp-for="RefreshTokenExpiration" class="form-control" />
                        <span asp-validation-for="RefreshTokenExpiration" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="AccessTokenType" class="col-sm-3 control-label"></label><div class="col-sm-8">
                        <input asp-for="AccessTokenType" class="form-control" />
                        <span asp-validation-for="AccessTokenType" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <div class="checkbox">
                            <label>
                                <input asp-for="EnableLocalLogin" /> @Html.DisplayNameFor(model => model.EnableLocalLogin)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <div class="checkbox">
                            <label>
                                <input asp-for="IncludeJwtId" /> @Html.DisplayNameFor(model => model.IncludeJwtId)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <div class="checkbox">
                            <label>
                                <input asp-for="AlwaysSendClientClaims" /> @Html.DisplayNameFor(model => model.AlwaysSendClientClaims)
                            </label>
                        </div>
