                </div>
                <div class="form-group">
                    <label asp-for="PairWiseSubjectSalt" class="col-sm-3 control-label"></label><div class="col-sm-8">
                        <input asp-for="PairWiseSubjectSalt" class="form-control" />
                        <span asp-validation-for="PairWiseSubjectSalt" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="LastAccessed" class="col-sm-3 control-label"></label><div class="col-sm-8">
                        <input asp-for="LastAccessed" class="form-control" />
                        <span asp-validation-for="LastAccessed" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="UserSsoLifetime" class="col-sm-3 control-label"></label><div class="col-sm-8">
                        <input asp-for="UserSsoLifetime" class="form-control" />
                        <span asp-validation-for="UserSsoLifetime" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="UserCodeType" class="col-sm-3 control-label"></label><div class="col-sm-8">
                        <input asp-for="UserCodeType" class="form-control" />
                        <span asp-validation-for="UserCodeType" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="DeviceCodeLifetime" class="col-sm-3 control-label"></label><div class="col-sm-8">
                        <input asp-for="DeviceCodeLifetime" class="form-control" />
                        <span asp-validation-for="DeviceCodeLifetime" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <div class="checkbox">
                            <label>
                                <input asp-for="NonEditable" /> @Html.DisplayNameFor(model => model.NonEditable)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Enabled" /> @Html.DisplayNameFor(model => model.Enabled)
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="box-footer text-center">
                <a asp-controller="Client" asp-action="List" class="btn btn-default pull-left">
                    <i class="fa fa-arrow-left"></i>
                    返回列表
                </a>
                <button type="reset" class="btn btn-default">重置</button>
                <button type="submit" class="btn btn-primary">提交</button>
            </div>
        </form>

    </div>
</section>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
