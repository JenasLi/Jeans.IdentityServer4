                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <div class="checkbox">
                            <label>
                                <input asp-for="BackChannelLogoutSessionRequired" /> @Html.DisplayNameFor(model => model.BackChannelLogoutSessionRequired)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <div class="checkbox">
                            <label>
                                <input asp-for="AllowOfflineAccess" /> @Html.DisplayNameFor(model => model.AllowOfflineAccess)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="IdentityTokenLifetime" class="col-sm-3 control-label"></label><div class="col-sm-8">
                        <input asp-for="IdentityTokenLifetime" class="form-control" />
                        <span asp-validation-for="IdentityTokenLifetime" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="AllowedIdentityTokenSigningAlgorithms" class="col-sm-3 control-label"></label><div class="col-sm-8">
                        <input asp-for="AllowedIdentityTokenSigningAlgorithms" class="form-control" />
                        <span asp-validation-for="AllowedIdentityTokenSigningAlgorithms" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="AccessTokenLifetime" class="col-sm-3 control-label"></label><div class="col-sm-8">
                        <input asp-for="AccessTokenLifetime" class="form-control" />
                        <span asp-validation-for="AccessTokenLifetime" class="text-danger"></span>
