                <div class="form-group">
                    <label asp-for="ClientId" class="col-sm-3 control-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="ClientId" class="form-control" />
                        <span asp-validation-for="ClientId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ClientName" class="col-sm-3 control-label"></label><div class="col-sm-8">
                        <input asp-for="ClientName" class="form-control" />
                        <span asp-validation-for="ClientName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="col-sm-3 control-label"></label><div class="col-sm-8">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ClientUri" class="col-sm-3 control-label"></label><div class="col-sm-8">
                        <input asp-for="ClientUri" class="form-control" />
                        <span asp-validation-for="ClientUri" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="LogoUri" class="col-sm-3 control-label"></label><div class="col-sm-8">
                        <input asp-for="LogoUri" class="form-control" />
                        <span asp-validation-for="LogoUri" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ProtocolType" class="col-sm-3 control-label"></label><div class="col-sm-8">
                        <input asp-for="ProtocolType" class="form-control" />
                        <span asp-validation-for="ProtocolType" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <div class="checkbox">
                            <label>
                                <input asp-for="RequireClientSecret" /> @Html.DisplayNameFor(model => model.RequireClientSecret)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <div class="checkbox">
                            <label>
                                <input asp-for="RequireConsent" /> @Html.DisplayNameFor(model => model.RequireConsent)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <div class="checkbox">
                            <label>
                                <input asp-for="AllowRememberConsent" /> @Html.DisplayNameFor(model => model.AllowRememberConsent)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <div class="checkbox">
                            <label>
                                <input asp-for="AlwaysIncludeUserClaimsInIdToken" /> @Html.DisplayNameFor(model => model.AlwaysIncludeUserClaimsInIdToken)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <div class="checkbox">
                            <label>
                                <input asp-for="RequirePkce" /> @Html.DisplayNameFor(model => model.RequirePkce)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <div class="checkbox">
                            <label>
                                <input asp-for="AllowPlainTextPkce" /> @Html.DisplayNameFor(model => model.AllowPlainTextPkce)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <div class="checkbox">
                            <label>
                                <input asp-for="AllowAccessTokensViaBrowser" /> @Html.DisplayNameFor(model => model.AllowAccessTokensViaBrowser)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="FrontChannelLogoutUri" class="col-sm-3 control-label"></label><div class="col-sm-8">
                        <input asp-for="FrontChannelLogoutUri" class="form-control" />
                        <span asp-validation-for="FrontChannelLogoutUri" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <div class="checkbox">
                            <label>
                                <input asp-for="FrontChannelLogoutSessionRequired" /> @Html.DisplayNameFor(model => model.FrontChannelLogoutSessionRequired)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="BackChannelLogoutUri" class="col-sm-3 control-label"></label><div class="col-sm-8">
