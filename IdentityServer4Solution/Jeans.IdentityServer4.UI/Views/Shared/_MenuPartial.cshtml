@functions
{
public string ClassActive(string[] controller_Name, string action_Name = "list")
{
    var controllerName = ViewContext.RouteData.Values["Controller"].ToString().ToLower();
    var actionName = ViewContext.RouteData.Values["Action"].ToString().ToLower();

    if (controller_Name.Contains(controllerName))
    {
        return "class=active";
    }

    return "";
}
}

