@model Jeans.IdentityServer4.UI.Core.Entity.ApiScope


@{
    ViewData["Title"] = "Edit";
}

<section class="content-header">
    <h1>
        ApiScope
        <small>@ViewData["Title"]</small>
    </h1>
</section>
<section class="content container-fluid">
    <div class="box box-primary">

        <form class="form-horizontal" method="post" asp-action="Edit">
            <div class="box-body">
                <div asp-validation-summary="ModelOnly" class="help-block"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Name"></label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="DisplayName"></label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="DisplayName">
                        <span asp-validation-for="DisplayName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="col-sm-2 control-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Required" /> @Html.DisplayNameFor(model => model.Required)
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Emphasize" /> @Html.DisplayNameFor(model => model.Emphasize)
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox">
                            <label>
                                <input asp-for="ShowInDiscoveryDocument" /> @Html.DisplayNameFor(model => model.ShowInDiscoveryDocument)
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="ApiResourceId">ApiResource.Name</label>
                    <div class="col-sm-8">
                        <select class="form-control" asp-for="ApiResourceId" asp-items="@ViewBag.ApiResourceSelectItemList"></select>
                        <span asp-validation-for="ApiResourceId" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="box-footer text-center">
                <a asp-controller="ApiScope" asp-action="List" class="btn btn-default pull-left">
                    <i class="fa fa-arrow-left"></i>
                    返回列表
                </a>
                <button type="reset" class="btn btn-default">重置</button>
                <button type="submit" class="btn btn-primary">提交</button>
            </div>
        </form>

    </div>
</section>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}